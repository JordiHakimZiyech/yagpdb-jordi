{{ if gt (toInt (dbGet .User.ID "coins").Value) ($args.Get 1) }}
{{ .User.Mention }} has given <@{{$args.Get 0}}> {{ $args.Get 1 }} $name {{ $givecoins := dbIncr ($args.Get 0) "coins" ($args.Get 1) }} 
